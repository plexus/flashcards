<% if @card.nil? %>
  <p>No more cards left. Well done.</p>
  <form action="/restart" method="POST">
    <button>Start over</button>
  </form>
<% else %>
  <div class="card">
    <div class="front">
      <%= @card.front %>
    </div>
    <div class="back">
      <%= @card.back %>
    </div>
  </div>

  <div class="controls">
    <button id="show">reveal</button>

    <form id="got-it" action="/session/cards/<%= @card.id %>" method="POST">
      <button>remembered</button>
    </form>

    <form action="/" method="GET">
      <button>next</button>
    </form>
  </div>
<% end %>

<script>
$(function() {
  var back = $(".card .back");

  $(document).on("click", "#show", function() {
    back.css("opacity", 1);
    $("#show").prop("disabled", true);
  });
});
</script>

